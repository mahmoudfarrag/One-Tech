</head>

<body style="font-family:Arial">

    <div class="super_container">

        <!-- Header -->

        <header class="header">

            <!-- Top Bar -->

            <div class="top_bar" style="position:fixed;background-color:#D0e3f1;color:black">
                <div class="container">
                    <div class="row">
                        <div class="col d-flex flex-row">
                            @if (User.Identity.IsAuthenticated)
                            {
        
                                <div class="top_bar_contact_item"><div class="top_bar_icon"><img src="~/Content/images/mail.png" alt=""></div><a href="#">@User.Identity.Name</a></div>}

                            <div class="top_bar_content ml-auto">
                                <div class="top_bar_menu">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <ul class="standard_dropdown top_bar_dropdown">
                          
                                            <li>  <div><a href="/Dashboard/index">Dashboard</a></div></li>
                                        </ul>
                                    }

                                </div>
                                <div class="top_bar_user">
                                    @if (User.Identity.IsAuthenticated == false)
                                    {
                        <div class="user_icon"><img src="~/Content/images/user.svg" alt=""></div>
                                        <div><a href="/Account/Register">Register</a></div>
                                                        <div><a href="/Account/Login">Sign in</a></div> }
                                                                    else
                                                                    {

                                                        <div><a href="/Account/Logout">Logout</a></div>
                                                                        <div class="pl-3"><a href="/Account/Edit/@User.Identity.GetUserId()">Settings</a></div>}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Header Main -->

            <div class="header_main">
                <div class="container">
                    <div class="row">

                        <!-- Logo -->
                        <div class="col-lg-2 col-sm-3 col-3 order-1">
                            <div class="logo_container">
                                <div class="logo"><a href="#">OneTech</a></div>
                            </div>
                        </div>

                        <!-- Search -->
                        <div class="col-lg-6 col-12 order-lg-2 order-3 text-lg-left text-right">
                            <div class="header_search">
                                <div class="header_search_content">
                                    <div class="header_search_form_container">
                                        <form action="/product/search" class="header_search_form clearfix">
                                            <input name="productToSearch" id="productToSearch" type="search" required="required" class="header_search_input"
                                                   placeholder="Search for products...">
                                            <button type="submit" class="header_search_button trans_300" value="Submit">
                                                <img src="~/Content/images/search.png" alt="">
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Wishlist -->
                        <div class="col-lg-4 col-9 order-lg-3 order-2 text-lg-left text-right">
                            <div class="wishlist_cart d-flex flex-row align-items-center justify-content-end">
                                <div class="wishlist d-flex flex-row align-items-center justify-content-end">
                                    <div class="wishlist_icon"><img src="~/Content/images/heart.png" alt=""></div>
                                    <div class="wishlist_content">
                                        <div class="wishlist_text"><a href="/wishlist/index">Wishlist</a></div>
                                   
                                    </div>
                                </div>

                                <!-- Cart -->
                                <div class="cart">
                                    <div class="cart_container d-flex flex-row align-items-center justify-content-end">
                                        <div class="cart_icon">
                                            <img src="~/Content/images/cart.png" alt="">
                                            <div class="cart_count"><span>10</span></div>
                                        </div>
                                        <div class="cart_content">
                                            <div class="cart_text"><a href="/cart/index">Cart</a></div>
                                        
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </header>


        @RenderBody();




        <!-- Footer -->

        <footer class="footer" style="background-color: white;color:black">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 footer_col">
                        <div class="footer_column footer_contact">
                            <div class="logo_container">
                                <div class="logo"><a href="#">OneTech</a></div>
                            </div>
                            <div class="footer_title">Got Question? Call Us 24/7</div>
                            <div class="footer_phone">+38 068 005 3570</div>
                            <div class="footer_contact_text">
                                <p>17 Princess Road, London</p>
                                <p>Grester London NW18JR, UK</p>
                            </div>
                            <div class="footer_social">
                                <ul>
